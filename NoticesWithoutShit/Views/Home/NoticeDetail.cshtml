@using Services.Abstractions.Dto.Notice;
@model NoticeDto

<div class="main-frame">
    <div class="page-name">
        <br />
        <h1 style="text-align: center;">Детальная информация публичной заметки!</h1>
        <br />
    </div>
    <div style="margin: 40px; padding: 20px; background-color: white; border-radius: 10px;">
        <p style="font-weight: bold; text-align: center;color: @Model.Color">@Model.Name</p>
        <hr />
        <p style="color: @Model.Color">@Model.Text;</p>
        <p style="text-align: right">Автор: <span style="font-weight: bold;">@Model.UserOwner</span> || Создано: <span style="font-weight: bold;">@Model.CreatedAt.ToString("d")</span> || Deadline: <span style="font-weight: bold;">@Model.Deadline.ToString("d")</span></p>
    </div>
</div>