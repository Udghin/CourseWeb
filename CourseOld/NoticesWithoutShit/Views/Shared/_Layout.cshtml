<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Супер сервис заметок... без х$*и (ЭТО ВАЖНО)</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Супер сервис заметок... без х$*и (ЭТО ВАЖНО)</a>
                    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                            aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                        <ul class="navbar-nav flex-grow-1">
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Домой</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">О сервисе...</a>
                            </li>
                            @if (User.Identity.IsAuthenticated && User.Identity.Name != "admin@gmail.com")
                            {
                        <li class="nav-item">
                           
                                <form method="post" asp-controller="User" asp-action="Dashboard">
                                    <input type="submit" class="btn btn-success" value="Управление заметками">
                                    </form>
                           
                        </li>
                            }
                            @if (User.Identity.IsAuthenticated && User.Identity.Name != "admin@gmail.com")
                            {

                        <li>
                            
                            <form method="post" asp-controller="Account" asp-action="Logout">
                                &nbsp;&nbsp; (@User.Identity.Name)&nbsp;&nbsp;
                                <input type="submit" class="btn btn-primary position-relative" value="Выход" />
                            </form>
                            
                        </li>
                             }
                            else if (User.Identity.IsAuthenticated && User.Identity.Name == "admin@gmail.com")
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                                </li>
                                <li>
                                    <form method="post" asp-controller="Account" asp-action="Logout">
                                        (@User.Identity.Name)
                                        <input type="submit" class="btn btn-primary position-relative" value="Выход" />
                                    </form>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Login">Вход</a>
                                </li>
                                <li class="nav-item">
                                    <span class="nav-link text-dark"> | </span>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Регистрация</a>
                                </li>
                            }

                        </ul>
                    </div>
                </div>
            </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3" style="min-height: 1300px; margin-bottom: -30px;">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted" style="margin-top:-30px;">
        <div class="container">
            &copy; 2021 - Супер сервис заметок без х$*и - <a asp-area="" asp-controller="Home" asp-action="Privacy">О заметках без х$*и</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>
